            <div class="page-body">            
                <div class="row">
                    <div class="col-xs-12">
                       @RenderBody()
                    </div>
                </div>
            </div>
        @* Page Footer *@
            <footer>
            <div class="row">
                <div class="col-xs-12">
                   
                    <p>Made by <a href="#" rel="nofollow">Sourav Mondal</a>. Contact at <a href="mailto:souravmondal45@gmail.com">souravmondal45@gmail.com</a>.</p>
                    
